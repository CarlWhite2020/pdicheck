    <item android:state_selected="true">
        <shape>
            <stroke android:width="@dimen/dp_0_5" android:color="#427577" />
            <solid android:color="#1a427577" />
            <corners android:bottomLeftRadius="@dimen/dp_3"
                android:bottomRightRadius="@dimen/dp_3"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="@dimen/dp_0_5" android:color="#427577" />
            <solid android:color="#1a427577" />
            <corners android:bottomLeftRadius="@dimen/dp_3"
                android:bottomRightRadius="@dimen/dp_3"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/white" />
            <corners android:bottomLeftRadius="@dimen/dp_3"
                android:bottomRightRadius="@dimen/dp_3"/>
        </shape>
    </item>

</selector>
