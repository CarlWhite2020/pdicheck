<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/index_tab"
        android:layout_width="@dimen/dp_50"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/home_tab"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/index_tab"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_5"
                android:text="@string/main_home"
                android:textColor="@color/color_txt_third_selector1"
                android:textSize="@dimen/sp_8"
                app:drawableTopCompat="@drawable/ic_home" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/split" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/report_tab"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/index_tab"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_5"
                android:text="@string/main_report"
                android:textColor="@color/color_txt_third_selector1"
                android:textSize="@dimen/sp_8"
                app:drawableTopCompat="@drawable/ic_report" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/split" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/mine_tab"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/index_tab"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_5"
                android:text="@string/mine_title"
                android:textColor="@color/color_txt_third_selector1"
                android:textSize="@dimen/sp_8"
                app:drawableTopCompat="@drawable/ic_mine" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>